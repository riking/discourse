<li class="navigation-toggle">
  <a href {{action "toggleDrop"}} class="toggle-link">
    {{this.selectedNavItem.displayName}}
    {{d-icon "caret-down"}}
  </a>
</li>
{{#if this.expanded}}
  <ul class="drop">
    {{#each this.navItems as |navItem|}}
      {{navigation-item content=navItem filterMode=this.filterMode category=this.category}}
    {{/each}}
    {{#each this.connectors as |c|}}
      {{plugin-connector connector=c class=c.classNames tagName="li" args=(hash category=this.category filterMode=this.filterMode)}}
    {{/each}}
  </ul>
{{/if}}
